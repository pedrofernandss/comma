{
  "compilerOptions": {

    "module": "commonjs",             
    "target": "es2020",              
    "esModuleInterop": true, 
    "resolveJsonModule": true,         
    "moduleResolution": "node",      

    "baseUrl": ".",                  
    "paths": {
      "@/*": ["src/*"]              
    },

    "outDir": "./dist",               
    "rootDir": "./src",              

    "strict": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true              
  },
  "include": ["src/**/*"],              
  "exclude": ["node_modules", "dist"]
}
